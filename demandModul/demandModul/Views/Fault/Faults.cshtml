@model IEnumerable<demandModul.Models.Fault>

@{
    ViewBag.Title = "Faults";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Faults</h2>
<div class="row">
    <div class="col-md-10">
        <br />
        <!--<input class="form-control"  style="width: 50%" id="myInput" type="text" placeholder="Search...">-->
    </div>
    <div class="col-md-2">
        <br />
        <button type="button" class="btn btn-info btn-block" data-toggle="modal" data-target="#CreateNew">
            Create New
        </button>
        <div class="modal fade" id="CreateNew" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="CreateNewTitle">Create New</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div id="loading" class="spinner-border text-info" role="status" style="display:none">
                            <span class="sr-only">Creating...</span>
                        </div>
                        <div class="form-group">
                            <label for="txtexplanation">Explanation</label>
                            <input type="text" class="form-control" id="txtexplanation" placeholder="Explanation" required>
                        </div>
                        <div class="form-group">
                            <label for="FaultType">Fault Type</label>
                            <select class="form-control" id="FaultType">
                                @foreach (var item in ViewBag.FaultTypeList)
                                {
                                    <option value="@item.Value">@item.Text </option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="Location">Location</label>
                            <select class="form-control" id="Location">
                                @foreach (var item in ViewBag.LocationList)
                                {
                                    <option value="@item.Value"> @item.Text</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="IntendedMaintenanceTime">Intended Maintenance Time</label>
                            <select class="form-control" id="IntendedMaintenanceTime">
                                <option>Now</option>
                                <option>Today</option>
                                <option>Tomorrow</option>
                                <option>Weekend</option>
                                <option>Out of Hours</option>
                            </select>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" id="create" class="btn btn-primary">Create</button>
                    </div>
                </div>
            </div>
        </div>
        <br />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Explanation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FaultType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Location)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreateDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IntendedMaintenanceTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FaultStatus)
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                if (item.FaultStatus != "Passive")
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Explanation)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FaultType.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Location.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreateDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IntendedMaintenanceTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FaultStatus)
                        </td>
                        <td>
                            @Html.ActionLink("Detail", "Detail", new { FaultID = @item.FaultID }, new { @class = "btn btn-info" })
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
</div>

<script>
    $(function () {
        $('#create').click(function () {
            if ($('#txtexplanation').val() != 0 && $('#Location').val() != 0) {
                var explanation = $('#txtexplanation').val();
                var faultType = $('#FaultType').val();
                var location = $('#Location').val();
                var IntendedMaintenanceTime = $('#IntendedMaintenanceTime').val();
                $.ajax({
                    method: "POST",
                    url: "/Fault/CreateNew",
                    data: { faultType: faultType, location: location, IntendedMaintenanceTime: IntendedMaintenanceTime, explanation: explanation },
                    beforeSend: function () {
                        $('#loading').show(300);
                    }
                }).done(function () {
                    window.location.reload();
                }).always(function () {
                    $('#loading').hide(300);
                    $('#CreateNew').modal('hide')
                });
                $('#FaultType').val(null);
                $('#txtexplanation').val(null);
                $('#Location').val(null);
                $('#IntendedMaintenanceTime').val(null);
            } else {
                $('#txtexplanation').css('border', '1px solid red');
                $('#Location').css('border', '1px solid red');
            }
        });
    });
</script>